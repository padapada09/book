{
  "include": [
    "*.ts"
  ],
  "exclude": [
    "*.json",
    "*.js",
    "*.scss"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "AServices": ["./Services"]
    }
  }
}